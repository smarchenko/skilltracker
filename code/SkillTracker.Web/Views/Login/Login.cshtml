@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="site clear-fix">
  <div class="auth-form-container" id="site-container">
    <section class="flash-messages container">
    </section>
    <form class="auth-form" method="POST">
      <div class="auth-form-header">
        <h1>Sign in</h1>
      </div>
      <div class="auth-form-body">
        <label for="usermail">User Email</label>
        <input autofocus="autofocus" class="input-block" id="usermail" name="usermail" tabindex="1" type="email" required="true">

        <label for="password">Password <a href="#" onclick="javascript:alert('link to password recovery page here.');">(forgot password)</a></label>
        <input class="input-block" id="password" name="password" tabindex="2" type="password" required="true">
        <input class="button" name="commit" tabindex="3" type="submit" value="Sign in">
      </div>
    </form>
  </div>
</div>
